<h2>Добавление новой статьи</h2>
<%= form_for :post, url: posts_path do |f| %>
 <% if @post.errors.any? %>
 <% @post.errors.full_messages.each do |msg| %>
 <div class="alert alert-danger"><%= msg %></div>
 <% end %>
 <% end %>
 <p>
  Название статьи<br>
  <%= f.text_field :title %>
 </p>
 <p>
  Текст статьи<br>
  <%= f.text_area :body %>
 </p>
 <p>
  <%= f.submit %>
 </p>
<% end %> 